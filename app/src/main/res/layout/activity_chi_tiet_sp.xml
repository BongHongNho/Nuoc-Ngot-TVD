<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/m3_appbar_background"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/app_name"></androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_margin="10dp"
        android:orientation="vertical">

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    app:strokeWidth="0dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageViewProduct"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#FFFFFF"
        android:layout_gravity="center"></ImageView>
</com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Trà Bí Đao WormderFam"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/textViewProductOrigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:text="Xuất sứ: Việt Nam"></TextView>

     <com.google.android.material.card.MaterialCardView
         android:layout_width="match_parent"
         app:strokeWidth="0dp"
         android:layout_height="wrap_content">
         <LinearLayout
             android:background="@drawable/m3_appbar_background"
             android:layout_width="match_parent"
             android:paddingBottom="10dp"
             android:paddingTop="10dp"
             android:layout_height="match_parent">
             <TextView
                 android:id="@+id/textViewProductInfo"
                 android:textSize="16dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:text="Thông tin sản phẩm"></TextView>
         </LinearLayout>
     </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/textViewProductQualaty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:text="Kho: "></TextView>
        <TextView
            android:id="@+id/textViewProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:text="Giá: 12000 VND"
            android:textColor="#FF0000"
            android:textStyle="bold"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/m3_appbar_background">
        </View>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh giá sản phẩm">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAddToCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Thêm vào giỏ hàng"></Button>

        <Button
            android:id="@+id/buttonCheckout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Đặt hàng"></Button>
    </LinearLayout>
</RelativeLayout>