<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.ChiTietSPActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewProduct"
            android:layout_marginTop="16dp"
            android:text="Product Name"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewProductOrigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewProductName"
            android:layout_marginTop="8dp"
            android:text="Origin: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewProductInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewProductOrigin"
            android:layout_marginTop="8dp"
            android:text="Product Info"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnBtn"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonAddToCart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Thêm vào giỏ hàng"
            android:onClick="addToCart"/>

        <Button
            android:id="@+id/buttonCheckout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:onClick="checkout"/>
    </LinearLayout>


</LinearLayout>
